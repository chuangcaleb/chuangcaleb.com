---
import { parse } from "date-fns";
import type { GuestPost } from "lib/google/sheets/types";
import Pill from "~/components/block/note/Pill.astro";
import { formatIso } from "~/utils/time";

interface Props {
  post: GuestPost;
}

const { post } = Astro.props;

const hasLink = !!post["ğŸ”— Social Link"];

const formattedDate = formatIso(
  parse(post.Timestamp, "dd/MM/yyyy HH:mm:ss", new Date()).toISOString(),
  "MMMM yyyy"
);
---

<div class="post | flom-lg surface-alt border flow">
  <div class="cite | flex-row">
    {
      post["ğŸ“¸ Avatar Image Link"] && (
        <img
          src={post["ğŸ“¸ Avatar Image Link"]}
          alt={`Avatar image of ${post["ğŸ“‡ Display Name"]}`}
          height={40}
          width={40}
          fetchpriority="low"
          loading="lazy"
        />
      )
    }
    <p>
      {
        hasLink ? (
          <a class="display-name" href={post["ğŸ”— Social Link"]}>
            {post["ğŸ“‡ Display Name"]}
          </a>
        ) : (
          <span class="display-name">{post["ğŸ“‡ Display Name"]}</span>
        )
      }
      <span class="flex-row wrap subtitle">
        <span>{post["ğŸ‘¥ Relation to me"]}</span>
        {post["ğŸ·ï¸ Tag"] !== "Other" && <Pill short={`#${post["ğŸ·ï¸ Tag"]}`} />}
      </span>
    </p>
  </div>
  <p class="body">
    {post["ğŸ“ƒ Content Body"]}
    <i>
      {formattedDate}
    </i>
  </p>
</div>

<style>
  .post {
    padding-block: var(--step-2);
    padding-inline: var(--step-1);
    padding-inline-start: var(--step-2);
  }
  .display-name {
    font-weight: var(--fw-6);
    /* font-size: var(--step-0); */
  }

  .subtitle {
    font-size: var(--step--1);
    text-transform: lowercase;
  }
  img {
    /* height: 3em; */
    /* aspect-ratio: 1/1; */
    border-radius: 100%;
  }
  .cite p > span {
    line-height: var(--font-lh-1);
  }
  .subtitle {
    color: var(--fg3);
    white-space: nowrap;
  }
  .body i {
    padding-inline-start: var(--step--1);
  }

  p {
    word-wrap: initial;
  }
</style>
