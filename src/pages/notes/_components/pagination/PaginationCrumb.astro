---
type Props = {
  currentPage: number;
  totalPages: number;
  totalItems: number;
};
const { currentPage, totalPages, totalItems } = Astro.props;
---

<p class="pagination-info">
  Page <strong>{currentPage}</strong> of <strong>{totalPages}</strong> ({
    totalItems
  } total)
</p>

<style>
  .pagination-info {
    color: var(--text-faded);
    font-size: var(--step--1);
  }
  strong {
    color: var(--text-normal);
  }
</style>
