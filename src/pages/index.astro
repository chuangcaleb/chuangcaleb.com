---
import Main from "~/components/layout/Main.astro";
import Hero from "~/components/blocks/Hero.astro";
import Highlights from "~/components/blocks/Now.astro";
import Projects from "~/components/blocks/Projects.astro";
import Skills from "~/components/blocks/Skills.astro";
---

<Main class="main-index | content-grid-wide">
  <div class="index-wrapper | region">
    <Hero />
    <div class="hr"></div>
    <Highlights />
  </div>
  <section class="code-banner | region">
    <code
      >writing("<span class="text-brand">code</span>"); “<span
        class="text-brand">story</span
      >-writing”</code
    >
  </section>
  <Projects />
  <Skills />
</Main>

<style is:global>
  .main-index {
    .index-wrapper {
      display: grid;
      grid-column: max;
      max-width: var(--size-xl);
      row-gap: var(--size-fluid-6);
    }
    .code-banner {
      display: grid;
      grid-column: full;
      grid-template-columns: subgrid;
    }

    code {
      grid-column: max;
      padding-block: var(--size-fluid-3);
      text-align: center;
    }

    .hr {
      display: none;
      border-width: 1px;
      height: 100%;
      margin-inline: var(--size-fluid-3);
    }
    @media screen and (width >= 1024px) {
      .index-wrapper {
        padding-inline: var(--gutter);
        grid-template-columns: 7fr auto 4fr;
      }

      .hr {
        display: block;
      }

      .highlights-section {
        padding-block: var(--size-fluid-3);
      }
    }
  }
</style>
