---
import Main from "~/components/layout/Main.astro";
import Hero from "~/components/blocks/Hero.astro";
import Highlights from "~/components/blocks/Now.astro";
import Projects from "~/components/blocks/Projects.astro";
import Skills from "~/components/blocks/Skills.astro";
---

<Main class="main-index content-grid-wide flow-2xl">
  <div class="wrapper">
    <Hero />
    <div class="hr"></div>
    <Highlights />
  </div>
  <Projects />
  <Skills />
</Main>

<style is:global>
  .main-index {
    padding-top: var(--size-fluid-3);
    padding-bottom: var(--size-fluid-6);
    .wrapper {
      display: grid;
      grid-column: max;
      max-width: var(--size-xl);
      margin-inline: auto;
    }

    @media screen and (width < 1024px) {
      .wrapper > * + * {
        margin-top: var(--size-relative-12);
      }
      .hr {
        display: none;
      }
    }
    @media screen and (width >= 1024px) {
      .wrapper {
        padding: var(--gutter);
        grid-template-columns: 7fr auto 4fr;
      }
      .hr {
        border-width: 1px;
        height: 100%;
        margin-inline: var(--size-fluid-3);
      }
      .highlights-section {
        padding-block: var(--size-fluid-1);
      }
    }
  }
</style>
