---
import Button from "@components/button.astro";
import Main from "@layouts/Main.astro";
---

<Main>
  <section>
    <div>
      <header>
        <h1>Chuang Caleb</h1>
        <h2>
          <span class="deemph">The</span> Frontend Web Dev <span class="deemph"
            >with a</span
          >
          <span class="gradient"> different story.</span>
        </h2>
      </header>
      <p>
        <code>
          <span class="nowrap">sometimes("writing-code");</span>{" "}
          <span class="nowrap">always("story-writing");</span>
        </code>
      </p>
      <ul class="norm buttons">
        <li><Button class="brand">Connect with me!</Button></li>
        <li><Button theme="brand">Git</Button></li>
        <li><Button>Link</Button></li>
        <li><button>CV</button></li>
      </ul>
    </div>

    <img
      src="https://www.gravatar.com/avatar/29d863c08e05a20bab30479ecae823eb?s=900"
      srcset="https://www.gravatar.com/avatar/29d863c08e05a20bab30479ecae823eb?s=300 300w, https://www.gravatar.com/avatar/29d863c08e05a20bab30479ecae823eb?s=600 600w, https://www.gravatar.com/avatar/29d863c08e05a20bab30479ecae823eb?s=900 900w"
      alt="Head profile of Chuang Caleb"
      height="400"
      width="400"
    />
  </section>
</Main>

<style>
  section {
    --max-w: calc(var(--size-lg) * 1.1);
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: var(--size-6);
  }
  header {
    display: grid;
    gap: var(--size-fluid-1);
  }
  section > div {
    display: grid;
    gap: var(--size-3);
  }

  h1 {
    font-size: var(--font-size-fluid-1);
    font-weight: var(--font-weight-4);
    text-transform: uppercase;
    letter-spacing: var(--font-letterspacing-4);
  }

  h2 {
    font-size: var(--font-size-fluid-3);
    font-weight: var(--font-weight-8);
    line-height: var(--font-lineheight-0);
    /* max-width: var(--size-header-1); */
    max-width: 16ch;
  }
  img {
    --_size: min(35vh, 70vw);
    border-radius: var(--radius-3);
    max-height: var(--_size);
    max-width: var(--_size);
  }

  ul.buttons {
    display: flex;
    gap: var(--size-2);
    li {
      display: inline-block;
    }
  }
  code {
    font-size: var(--font-size-1);
    /* display: block; */
  }

  .gradient {
    background: linear-gradient(to bottom right, var(--text-1), var(--brand));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .deemph {
    font-weight: initial;
  }
</style>
