---
import { ThemeDropdown } from "~/components/block/ThemeDropdown";
import Base from "~/components/layout/Base.astro";
import Main from "~/components/layout/Main.astro";
import Hero from "./_components/Hero.astro";
import Highlights from "./_components/now/index.astro";
import Projects from "./_components/projects/index.astro";
import Skills from "./_components/skills/index.astro";
import SITE from "~/data/site";
---

<Base title={`${SITE.title} - ${SITE.subtitle}`}>
  <Main class="main-index | cgrid-max">
    <Hero class="wide" />
    <Highlights />
    <section class="utils-section">
      <ThemeDropdown client:only="react" />
    </section>
    <Projects />
    <Skills />
  </Main>
</Base>

<style>
  .utils-section {
    text-align: center;
    padding-block: var(--space-m);
    font-size: var(--step-1);
  }
</style>
