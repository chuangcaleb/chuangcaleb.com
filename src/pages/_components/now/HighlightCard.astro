---
import type { CollectionEntry } from "astro:content";
import UlIcon from "~/components/styled/monom/UlIcon.astro";
import BrandA from "~/components/styled/monom/BrandA.astro";

interface Props {
  highlight: CollectionEntry<"highlight">;
}

const { highlight } = Astro.props;

const components = {
  h1: "h3",
  ul: UlIcon,
  a: BrandA,
};

const { Content } = await highlight.render();
---

<article class="highlight | flow-sm">
  <Content components={components} />
</article>

<style is:global>
  .highlight {
    h3 {
      display: grid;
      gap: var(--space-3xs);
      span {
        font-size: var(--step-0);
      }
      svg {
        width: var(--size-relative-7);
      }
    }
    em {
      color: var(--text-faded);
    }
  }
</style>
