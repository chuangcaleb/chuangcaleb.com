---
import Icon from "astro-iconify";
import Button from "~/components/primitive/Button.astro";
import LINKS from "~/data/links";
import * as content from "./overview.mdx";

const links = [LINKS.LINKEDIN, LINKS.CV];

const { Content } = content;
const components = { h1: "h3" };
---

<section class="full cgrid-max region surface-alt">
  <div class="container">
    <article class="flow-lg prose">
      <h2 class="sr-only">Overview</h2>
      <Content components={components} />
      <div class="cont-buttons">
        {
          links.map((l, idx) => (
            <Button as="a" href={l.href} theme={!idx ? "brand" : undefined}>
              <Icon name={l.icon} />
              {l.label}
            </Button>
          ))
        }
      </div>
    </article>
  </div>
</section>

<style>
  article {
    max-width: var(--content-w);
    em {
      opacity: 0.85;
    }

    h3 {
      color: var(--tx3);
      font-size: var(--step-1);
      display: flex;
      gap: var(--size-relative-2);
      svg {
        width: var(--size-relative-7);
        margin-bottom: var(--size-relative-2);
      }
      + * {
        --flow-space: var(--size-relative-2);
      }
    }
  }
  .cont-buttons {
    display: flex;
    column-gap: var(--space-s);
    flex-wrap: wrap;
  }
</style>
