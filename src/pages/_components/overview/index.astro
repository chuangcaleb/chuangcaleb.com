---
import { defaultComponents } from "lib/utils/markdown";
import * as content from "./overview.mdx";

const { Content } = content;
const components = { h1: "h3", ...defaultComponents };
---

<section class="full linew-wide region surface-alt flom-xl">
  <article class="flow-lg prose">
    <h2 class="sr-only">Overview</h2>
    <Content components={components} />
  </article>
</section>

<style>
  article {
    max-width: var(--content-w);

    h3 {
      color: var(--fg3);
      font-size: var(--step-1);
      font-weight: var(--font-weight-5);
      font-family: var(--font-heading-serif);
      display: flex;
      gap: 0.75ch;
      svg {
        margin-bottom: var(--size-relative-2);
      }
      + * {
        --flow-space: var(--size-relative-2);
      }
    }
    a.accent svg.scale-body {
      width: 1.25em;
    }
  }
</style>
