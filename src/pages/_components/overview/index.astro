---
import SocialLinkButton from "~/components/block/SocialLinkButton.astro";
import type { LinkKey } from "~/data/links";
import * as content from "./overview.mdx";

const links = ["LINKEDIN", "CV"] as LinkKey[];

const { Content } = content;
const components = { h1: "h3" };
---

<section class="full linew-wide region surface-alt">
  <article class="flow-lg prose">
    <h2 class="sr-only">Overview</h2>
    <Content components={components} />
    <div class="cont-buttons">
      {
        links.map((l, idx) => (
          <SocialLinkButton link={l} theme={!idx ? "brand" : undefined} />
        ))
      }
    </div>
  </article>
</section>

<style>
  article {
    max-width: var(--content-w);
    em {
      opacity: 0.85;
    }

    h3 {
      color: var(--tx3);
      font-size: var(--step-1);
      display: flex;
      gap: var(--size-relative-2);
      svg {
        width: var(--size-relative-7);
        margin-bottom: var(--size-relative-2);
      }
      + * {
        --flow-space: var(--size-relative-2);
      }
    }
  }
  .cont-buttons {
    display: flex;
    column-gap: var(--space-s);
    flex-wrap: wrap;
  }
</style>
