---
import type { HTMLAttributes } from "astro/types";
import { composeClasses } from "@utils/ui";

export interface ButtonProps extends HTMLAttributes<"button"> {
  theme?: "brand";
}

type Props = ButtonProps;

let { class: className, theme, ...props } = Astro.props;

className = composeClasses(className, theme);
---

<button class={className} {...props}>
  <slot />
</button>

<style>
  button {
    background-color: var(--_bg, var(--surface-1b));
    color: var(--_text, var(--text-1));
    font-weight: var(--font-weight-7);
    padding: var(--size-2) var(--size-3);
    border-radius: var(--radius-2);
  }
  button.brand {
    --_bg: var(--brand);
    --_text: var(--text-on-brand);
  }
</style>
