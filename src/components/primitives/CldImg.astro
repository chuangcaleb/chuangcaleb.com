---
import { Image } from "astro:assets";
import { composeSrc, composeSrcset } from "lib/cloudinary/compose";
import type { CloudinaryResource } from "lib/cloudinary/types";

// Adapted from: https://github.com/ooloth/michaeluloth.com/blob/main/lib/rehype/cloudinary-image-attributes.ts

interface Props {
  resource?: CloudinaryResource;
  hasBorder?: boolean;
  sizes?: string;
}
const { resource: r, hasBorder, sizes } = Astro.props;

const src = r ? composeSrc(r.public_id, r.width) : null;
const srcset = r ? composeSrcset(r.public_id, r.width) : null;
---

{
  r && src && (
    <Image
      src={src}
      height={r.height}
      width={r.width}
      srcset={srcset}
      sizes={sizes}
      alt=""
      class={hasBorder ? "img-border" : null}
    />
  )
}

<style>
  .img-border {
    border-width: var(--size-relative-1);
    border-radius: var(--radius-2);
  }
</style>
