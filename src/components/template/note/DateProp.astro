---
import { formatDisplayDate, getLongDurationSince } from "~/utils/time";

interface Props {
  datetime: string;
}

const { datetime } = Astro.props;

const diplayDatetime = formatDisplayDate(datetime);
---

<time datetime={new Date(datetime).toISOString()}>{diplayDatetime}</time> / {
  getLongDurationSince(datetime)
}
