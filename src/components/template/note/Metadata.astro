---
export type MetadataProps = {
  [key: string]: unknown;
};

type Props = { metadata: MetadataProps };

const { metadata } = Astro.props;
const metadataArray = Object.entries(metadata);
---

<ul>
  {
    metadataArray.map(([key, value]) => {
      return (
        <li>
          {key} :: {value}
        </li>
      );
    })
  }
</ul>

<style>
  ul {
    color: var(--text-faded);
    font-size: var(--step--1);
    margin-block: auto;
  }
</style>
