---
import { slugify } from "lib/markdown/string";
import { getNoteName } from "~/utils/post";
import BrandA from "~/components/styled/monom/BrandA.astro";

interface Props {
  isLink: boolean;
  value: string | Date;
}

const { isLink, value } = Astro.props;
const isDate = value instanceof Date;
---

{
  isDate ? (
    value.toLocaleDateString("en-gb")
  ) : isLink ? (
    <BrandA href={`/garden/note/${slugify(value)}`}>
      {getNoteName(value)}
    </BrandA>
  ) : Date.parse(value) ? (
    new Date(value).toLocaleDateString("en-gb")
  ) : (
    value
  )
}
