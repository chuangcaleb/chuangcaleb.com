---
import Icon from "astro-iconify";
import HeadingWIcon from "~/components/styled/polym/HeadingWIcon.astro";
import LINKS from "~/data/links";
import BrandA from "../styled/monom/BrandA.astro";
---

<section class="contact-section | cgrid-wide flow-lg" id="contact">
  <HeadingWIcon as="h2">
    <Icon name="mdi:connection" />
    {" "}<span class="text-faded">#</span> contact
  </HeadingWIcon>
  <p>You made it to the end! ...Or is it just the beginning?</p>
  <ul class="norm flow-xs">
    {
      Object.values(LINKS).map((l) => (
        <li>
          <BrandA href={l.href}>
            <Icon name={l.icon} aria-hidden="true" />{}{l.userId ?? l.label}
          </BrandA>
        </li>
      ))
    }
  </ul>
</section>

<style is:global>
  .contact-section {
    margin-block: auto;
    padding-block: var(--size-fluid-4);

    ul {
      display: grid;
      gap: var(--size-relative-3);
    }
    li {
      width: fit-content;
    }
    a {
      letter-spacing: var(--font-letterspacing-2);
      svg {
        width: var(--step-3);
      }
    }
  }
</style>
