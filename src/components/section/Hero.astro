<style lang="scss">
  $grid-item-w: 130px;

  section {
    max-width: 1300px;
    margin-inline: auto;
  }

  $gutter: minmax(0, $grid-item-w / 1.5);
  .container {
    display: grid;
    grid-template-columns: $gutter repeat(8, minmax($grid-item-w, 1fr)) $gutter;
    grid-template-rows: repeat(7, 1fr);
    position: relative;
  }

  .text-cont {
    grid-column: 2 / 8;
    grid-row: 3 / -1;

    display: grid;
    grid-template-columns: subgrid;
    grid-template-rows: max-content;

    h1 {
      grid-column: 1 / -1;
      hyphens: none;
      line-height: var(--step-7);
    }
    p {
      text-wrap: balance;
      grid-column: 1 / -2;
      padding-inline-end: var(--space-m);
      font-size: var(--step-1);
    }
  }
  img {
    grid-column: -5 / -1;
    grid-row: 1 / 6;
    width: 100%;
    filter: saturate(0.6);
    z-index: -1;
  }

