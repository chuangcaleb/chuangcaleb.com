---
import { NAV_LINKS } from "~/data/links";
import LinkList from "../block/LinkList.astro";

interface Props {
  isFooter?: boolean;
}

const { isFooter = false } = Astro.props;
---

<nav>
  <h2 class="sr-only">Site navigation</h2>
  <LinkList
    class="flow-sm"
    links={Object.values(NAV_LINKS)}
    variant={isFooter ? "footer" : undefined}
  />
</nav>
