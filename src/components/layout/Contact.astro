---
import Icon from "astro-iconify";
import type { HTMLAttributes } from "astro/types";
import TagWIcon from "~/components/styled/polym/TagWIcon.astro";
import { SOCIALS } from "~/data/links";
import AccentA from "../styled/monom/AccentA.astro";

export interface Props extends HTMLAttributes<"section"> {}

const { class: propsClass, ...props } = Astro.props;
---

<section class:list={["region flow-lg", propsClass]} id="contact" {...props}>
  <TagWIcon as="h2" iconName="mdi:connection">
    {" "}<span class="text-faded">#</span> contact
  </TagWIcon>
  <p>You made it to the end! ...Or is it just the beginning?</p>
  <ul class="norm flow-xs">
    {
      Object.values(SOCIALS).map((l) => (
        <li>
          <AccentA href={l.href}>
            <Icon name={l.icon} aria-hidden="true" />{}{l.userId ?? l.label}
          </AccentA>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    margin-block: auto;

    ul {
      display: grid;
      gap: var(--size-relative-3);
    }
    li {
      width: fit-content;
    }
    a {
      letter-spacing: var(--font-letterspacing-2);
      svg {
        width: var(--step-3);
      }
    }
  }
</style>
