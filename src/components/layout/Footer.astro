---
import Contact from "~/components/section/Contact.astro";
---

<footer id="footer" class="flow-xs">
  <Contact />
  <p class="fine-print">
    <a href="https://github.com/chuangcaleb/chuangcaleb.com">source code</a>
    <a href="/sitemap-index.xml">sitemap</a>
  </p>
  <p class="fine-print">
    designed by Chuang Caleb and published in {new Date().getFullYear()}
  </p>
</footer>

<style>
  footer {
    margin-top: auto;
    background-color: var(--surface-1b);
    border-top-width: 1px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    .fine-print {
      color: var(--text-faded);
      font-size: var(--step--2);
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      text-align: center;
      column-gap: var(--space-xs);
      justify-self: flex-end;
    }
  }
</style>
