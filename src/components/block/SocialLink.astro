---
import Icon from "astro-iconify";
import type { HTMLAttributes } from "astro/types";
import type { LinkKey } from "~/data/links";
import { SOCIALS } from "~/data/links";
import AccentA from "../styled/monom/AccentA.astro";

type Props = {
  link: LinkKey;
} & HTMLAttributes<"a">;

const { link, ...props } = Astro.props;

const l = SOCIALS[link];
---

<AccentA href={l.href} {...props}>
  <Icon name={l.icon} class="scale-body" aria-hidden="true" /><span
    class="a-text">{l.label}</span
  >
</AccentA>
