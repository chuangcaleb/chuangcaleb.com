---
import type { HTMLAttributes } from "astro/types";
import type { LinkKey } from "~/data/links";
import { SOCIALS } from "~/data/links";
import TagWIcon from "../styled/polym/TagWIcon.astro";

type Props = {
  link: LinkKey;
  extArrow?: boolean;
  display?: "userId" | "label";
} & HTMLAttributes<"a">;

const { link, extArrow = false, display = "label", ...props } = Astro.props;

const l = SOCIALS[link];
---

<TagWIcon {...props} as="a" href={l.href} iconName={l.icon}>
  {(display === "label" ? l.label : l.userId) ?? l.label}
</TagWIcon>
