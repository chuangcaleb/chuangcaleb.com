---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag = "h1", ...props } = Astro.props;
---

<Tag {...props}>
  <slot />
</Tag>

<style>
  * {
    display: inline-flex;
    gap: var(--size-relative-2);
    svg {
      color: var(--brand);
    }
  }
</style>
