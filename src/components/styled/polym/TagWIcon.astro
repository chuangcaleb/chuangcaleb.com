---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  iconColor?: "ax1" | "tx3";
};

const {
  as: Tag = "h1",
  class: propsClass,
  iconColor = "ax1",
  ...props
} = Astro.props;
---

<Tag {...props} class:list={[propsClass, iconColor]}>
  <slot />
</Tag>

<style>
  * {
    display: inline-flex;
    gap: var(--size-relative-2);
    &.ax1 :global(svg) {
      color: var(--ax1);
    }
    &.tx3 :global(svg) {
      color: var(--tx3);
    }
  }
</style>
