---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag = "span", ...props } = Astro.props;
---

<Tag {...props}>
  <slot />
</Tag>

<style>
  * {
    /* display: inline-flex;
    align-items: center;
    gap: var(--size-ch-3); */
    font-weight: var(--fw-4);
    color: var(--ax1);
    text-transform: uppercase;
    letter-spacing: var(--font-ls-4);
  }
</style>
