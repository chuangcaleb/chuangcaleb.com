---
import { type HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"a"> {}

const props = Astro.props;
---

<a {...props}>
  <slot />
</a>

<style>
  * {
    --color: var(--brand);
    --color-underline: hsla(var(--brand-hsl) / 0.5);
    &:is(:hover, :focus, :active) {
      --color-underline: var(--brand);
    }
  }
</style>
