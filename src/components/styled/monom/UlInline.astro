---
import { type HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"ul"> {}

const { class: className, ...props } = Astro.props;
---

<ul class:list={["norm cc-ul-inline", className]} {...props}>
  <slot />
</ul>

<style is:global>
  .cc-ul-inline {
    display: flex;
    flex-wrap: wrap;
    padding-left: unset;
    gap: var(--size-relative-3);
  }
</style>
