---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag, class: className, ...props } = Astro.props;
---

<Tag class:list={["unstyled-hover-link flow-xs", className]} {...props}>
  <slot />
</Tag>

<style>
  * {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;

    /* display: block; */
    height: 100%;
    padding: var(--space-m);

    border-width: var(--bw-2);
    border-color: var(--ui1);
    /* border-radius: var(--radius-2); (set on all a) */

    transition: 0.3s ease-in-out;

    container-type: inline-size;

    /* background-color: var(--bg1); */
    --color-underline: transparent;
    &:hover {
      --color: var(--ax1);
      border-color: var(--border-color-hover, var(--ui3));
      background-color: var(--bg3);

      transform: scale3d(1.02, 1.02, 1.02);
    }
  }
</style>
