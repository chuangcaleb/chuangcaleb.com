---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag; variant?: "active" }>;

const { as: Tag, class: className, variant, ...props } = Astro.props;
---

<Tag
  class:list={["unstyled-hover-link flow-xs border", variant, className]}
  {...props}
>
  <slot />
</Tag>

<style>
  * {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    /* display: block; */

    position: relative;
    height: 100%;
    padding: var(--space-m);
    max-width: var(--size-content-2);

    border-width: var(--bw-2);

    transition: 0.3s ease-in-out;

    container-type: inline-size;

    /* background-color: var(--bg1); */
    --color-underline: transparent;
    &:is(a):hover {
      --color: var(--ax1);
      border-color: var(--border-color-hover, var(--ui3));
      background-color: var(--bg3);

      transform: scale3d(1.02, 1.02, 1.02);
    }
    &.active {
      border-color: var(--ui3);
      background-color: var(--bg3);
      /* opacity: 0.8; */
    }
  }
</style>
