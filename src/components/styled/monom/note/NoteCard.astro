---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag, class: className, ...props } = Astro.props;
---

<Tag class:list={["unstyled-hover-link", className]} {...props}>
  <slot />
</Tag>

<style>
  * {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    padding: var(--space-s);

    flex-direction: column;
    align-items: start;

    border-width: var(--bw-2);
    border-color: var(--ui1);
    border-radius: var(--radius-2);

    transition: 0.3s ease-in-out;

    --color-underline: transparent;
    &:hover {
      --color: var(--ax1);
      border-color: var(--border-color-hover, var(--ui3));
      background-color: var(--bg3);

      transform: scale3d(1.02, 1.02, 1.02);
    }

    & :global(h3) {
      font-size: var(--step-1);
      font-family: var(--font-heading-serif);
      font-weight: var(--font-weight-4);
      text-wrap: balance;
    }
    & :global(.metadata) {
      color: var(--fg3);
      font-size: var(--step--1);
      font-family: var(--font-mono);
    }
  }
</style>
