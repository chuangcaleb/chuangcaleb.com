---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag, class: className, ...props } = Astro.props;
---

<Tag class:list={["unstyled-hover-link", className]} {...props}>
  <slot />
</Tag>

<style>
  * {
    display: block;
    padding-block: var(--space-xs);

    font-family: var(--font-heading-sans);
    font-weight: var(--fw-6);
    font-size: var(--step-1);
    line-height: var(--font-lh-1);

    text-decoration: none;
    border-radius: 0;
    border-bottom-width: 2px;
    border-bottom-color: var(--ui3);

    transition: 0.3s ease-in-out;

    --color-link: var(--text-normal);
    --color-hover: var(--ax1);
    &:hover {
      border-color: var(--ax2);
      transform: scale3d(1.02, 1.02, 1.02);
    }
  }
</style>
