---
import { type HTMLTag, type Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Tag = "h1", class: className, ...props } = Astro.props;
---

<Tag class:list={["cc-heading-w-icon", className]} {...props}>
  <slot />
</Tag>

<style is:global>
  .cc-heading-w-icon {
    display: inline-block;
    white-space: nowrap;
    svg {
      color: var(--brand);
    }
    /* place-items: center;
      align-self: stretch; */
