---
import Base, { type BaseProps } from "./Base.astro";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

type Props = BaseProps;

const { description, title } = Astro.props;
---

<Base title={title} description={description}>
  <Header />

  <main id="main">
    <slot />
  </main>

  <Footer />
</Base>

<style>
  main {
    flex: 1;
  }
</style>
